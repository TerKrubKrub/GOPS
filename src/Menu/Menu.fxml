<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Menu.Controller">
    <ImageView fitHeight="700.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../Resource/Background/menu.png"/>
    </ImageView>
    <VBox alignment="CENTER" layoutX="86.0" layoutY="62.0" minHeight="350.0" prefHeight="575.0" prefWidth="250.0">
        <Button fx:id="startButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
                onAction="#pressStartButton" prefHeight="120.0" prefWidth="200.0" stylesheets="@../File/Style.css" text="Start"
                textFill="WHITE" textOverrun="CLIP">
            <VBox.margin>
                <Insets bottom="25.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Rounded MT Bold" size="40.0"/>
            </font>
        </Button>
        <Button fx:id="tutorialButton" mnemonicParsing="false" onAction="#pressTutorialButton" prefHeight="80.0"
                prefWidth="200.0" stylesheets="@../File/Style.css" text="Tutorial" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="25.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Rounded MT Bold" size="30.0"/>
            </font>
        </Button>
        <Button fx:id="scoreButton" mnemonicParsing="false" onAction="#pressScoreButton" prefHeight="80.0"
                prefWidth="200.0" stylesheets="@../File/Style.css" text="Score" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="25.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Rounded MT Bold" size="30.0"/>
            </font>
        </Button>
        <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#pressAboutButton" prefHeight="80.0"
                prefWidth="200.0" stylesheets="@../File/Style.css" text="About" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="25.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Rounded MT Bold" size="30.0"/>
            </font>
        </Button>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#pressCloseButton" prefHeight="80.0"
                prefWidth="200.0" stylesheets="@../File/Style.css" text="Exit" textFill="WHITE">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <font>
                <Font name="Arial Rounded MT Bold" size="30.0"/>
            </font>
        </Button>
    </VBox>
    <Button fx:id="minimizeButton" layoutX="912.0" layoutY="16.0" mnemonicParsing="false" onAction="#pressMinimizeButton"
            prefWidth="25.0" rotate="15.0" stylesheets="@../File/Style.css"/>
    <Button fx:id="closeButton" layoutX="952.0" layoutY="16.0" mnemonicParsing="false" onAction="#pressCloseButton"
            prefHeight="25.0" prefWidth="25.0" rotate="15.0" stylesheets="@../File/Style.css"/>
</AnchorPane>
