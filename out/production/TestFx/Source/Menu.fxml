<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Source.Controller">
    <children>
        <ImageView fitHeight="700.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../Resource/menu.png" />
        </ImageView>
        <VBox alignment="CENTER" layoutX="86.0" layoutY="62.0" minHeight="350.0" prefHeight="575.0" prefWidth="250.0">
            <Button fx:id="startButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#pressStart" prefHeight="120.0" prefWidth="200.0" text="Start" textFill="WHITE" textOverrun="CLIP">
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
                <font>
                    <Font name="Arial Rounded MT Bold" size="48.0" />
                </font>
            </Button>
            <Button fx:id="tutorialButton" mnemonicParsing="false" onAction="#pressTutorial" prefHeight="80.0" prefWidth="200.0" text="Tutorial">
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
            </Button>
            <Button fx:id="scoreButton" mnemonicParsing="false" onAction="#pressScore" prefHeight="80.0" prefWidth="200.0" text="Score">
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
            </Button>
            <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#pressAbout" prefHeight="80.0" prefWidth="200.0" text="About">
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#pressExit" prefHeight="80.0" prefWidth="200.0" text="Exit">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
            </Button>
        </VBox>
    </children>
</AnchorPane>
